@model BuscaEmprego.Models.VagasViewModel
@{
    ViewBag.Title = "Detalhes da Vaga";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("EditarVaga", "Vagas", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Detalhes de uma vaga no BuscaEmprego</h4>
    <hr />
    if (Model.CodigoResultado == BuscaEmprego.Enumerators.CodigoResultadoEnum.ERRO)
    {
        @Html.ValidationSummary("", new { @class = "text-danger alert alert-danger" })
    }
    else if (Model.CodigoResultado == BuscaEmprego.Enumerators.CodigoResultadoEnum.OK)
    {
        <div class="alert alert-success">@Model.Mensagem</div>
    }

    @Html.HiddenFor(m => m.EmailEmpresa)
    <div class="form-group">
        @Html.LabelFor(m => m.Descricao, new { @class = "col-md-2 control-label" })
        @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", maxlength = 255, WebGridColumn = 10, WebGridRow = 10 })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Salario, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Salario, new { @class = "form-control", Value = String.Format("{0:C}", 0) })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Beneficios, new { @class = "col-md-2 control-label" })
        @Html.TextAreaFor(m => m.Beneficios, new { @class = "form-control", maxlength = 255, WebGridColumn = 10, WebGridRow = 10 })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TipoVaga, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.TipoVaga, BuscaEmprego.Helpers.DropDownHelper.GetDropdownTipoVaga(),
           new { @class = "form-control", id = "vaga-tipo" })
    </div>
    <div class="form-group">
        <input type="submit" name="btnDetalhe" class="btn btn-default" value="Editar" />
        <input type="submit" name="btnDetalhe" class="btn btn-default" value="Excluir" />
        <input type="submit" name="btnDetalhe" class="btn btn-default" value="Salvar" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
