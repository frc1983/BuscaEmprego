@model BuscaEmprego.Models.VagasViewModel
@{
    ViewBag.Title = "Cadastro de Vagas";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("Cadastrar", "Vagas", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Criar uma vaga no BuscaEmprego</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Descricao, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", maxlength = 255, WebGridColumn = 10, WebGridRow = 10})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Salario, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Salario, new { @class = "form-control", maxlength = 8 })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Beneficios, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Beneficios, new { @class = "form-control", maxlength = 255, WebGridColumn = 10, WebGridRow = 10 })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TipoVaga, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.TipoVaga, BuscaEmprego.Helpers.DropDownHelper.GetDropdownTipoVaga(),
           new { @class = "form-control", id = "vaga-tipo" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}